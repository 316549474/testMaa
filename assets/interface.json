{
    // 本文件主要定义了通用 UI 的行为和显示内容
    // 可参考文档和示例添加更多您需要的功能
    // 文档：https://maafw.xyz/docs/3.3-ProjectInterfaceV2
    // 示例：https://github.com/MaaXYZ/MaaFramework/blob/main/sample/interface.json
    "interface_version": 2,
    "name": "MaaZJCS",
    "description": "MaaFramework。",
    "contact": "QQ群: 123456789",
    "license": "MIT",
    "welcome": "首次使用！欢迎使用 MAA!",
    // 填写项目地址和版本号可实现自动更新功能
    "github": "https://github.com/MaaXYZ/MaaPracticeBoilerplate",
    "version": "1.0.1",
    "controller": [
        {
            "name": "安卓端",
            "type": "Adb",
            "display_short_side": 720 // 默认缩放分辨率的短边长度
        },
        {
            "name": "桌面端",
            "type": "Win32",
            "win32": {
                "class_regex": ".*",
                "window_regex": "Visual Studio",
                // 截图及控制方式，请根据项目实际情况修改
                // 文档: https://maafw.xyz/docs/2.4-ControlMethods
                "screencap": "PrintWindow", // 截图方式
                "mouse": "PostMessageWithCursorPos", // 鼠标控制方式
                "keyboard": "PostMessageWithCursorPos" // 键盘控制方式
            }
        }
    ],
    "resource": [
        {
            "name": "官服",
            "path": [
                "./resource"
            ]
        },
        {
            "name": "B 服",
            "path": [
                "./resource",
                "./resource_bilibili"
            ]
        }
    ],
    "task": [
        {
            "name": "刷圣兽",
            "entry": "BeastTrial",
            "option": [
                "循环次数"
            ]
        }
    ],
    "option": {
        "循环次数": {
            "type": "input",
            "label": "输入循环次数",
            "description": "请输入想要循环的次数",
            "inputs": [
                {
                    "name": "次数",
                    "label": "循环次数",
                    "description": "输入1-100之间的整数",
                    "default": "1",
                    "pipeline_type": "string",
                    "verify": "^[1-9]\\d*$",
                    "max_length": 3
                }
            ],
            "pipeline_override": {
                "SetReplaysTimes": {
                    "expected": "{次数}"
                }
            }
        }
    }
}